<div class="content">
    <section class="title-section">
    <h1>my <span class="color-text">blog</span></h1>
    <span class="title-bg">posts</span>
    </section>

    <section class="main-content-blog">
        <div class="container">
            <div class="parent">
                {{#if BlogData}}
                {{#each BlogData}}
                <div class="col-4 col-xl-6 col-md-12">
                    <article class="post-container">
                        <div class="post-thumb">
                            <a href="{{url}}{{_id}}">
                                <img src="{{url}}/{{image}}" class="img-fluid" alt="Blog Post">
                            </a>
                        </div>
                        <div class="post-content">
                            <div class="entry-header">
                                <h3><a href="{{url}}{{_id}}">{{title}}</a></h3>
                            </div>
                            <div class="entry-content">
                                <p>{{descr}}
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
                {{/each}}
                {{/if}}
            </div>
        </div>

    </section>
</div>
<script src="{{url}}/js/color.js" ></script>

<script src="{{url}}/js/jquery-3.6.0.min.js"></script>
<script src="{{url}}/js/switcher.js"></script>