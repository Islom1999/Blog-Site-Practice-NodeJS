<div class="content">
    <section class="title-section">
    <h1>my <span class="color-text">blog</span></h1>
    <span class="title-bg">posts</span>
    </section>

    <section class="main-content-blog">
        <div class="container">
            <div class="parent">
                {{#if BlogData}}
                {{#each BlogData}}
                <div class="col-4 col-xl-6 col-md-12">
                    <article class="post-container">
                        <div class="post-thumb">
                            <a href="{{url}}/admin/blog/{{_id}}">
                                <img src="{{url}}/{{image}}" class="img-fluid" alt="Blog Post">
                            </a>
                        </div>
                        <div class="post-content">
                            <div class="entry-header">
                                <h3><a href="{{url}}/admin/blog/{{_id}}">{{title}}</a></h3>
                            </div>
                            <div class="entry-content">
                                <p>{{descr}}
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
                {{/each}}
                {{/if}}
            </div>
        </div>

    </section>

    <div class="container my-5">
        <form action="{{url}}/admin/blog"  method="POST" enctype="multipart/form-data" class="text-center">
            <div class="form-group my-3">
                <label for="title">Title</label>
                <input 
                    type="text"
                    class="form-control bg-secondary" 
                    id="title"
                    name="title">
            </div>
            <div class="form-group my-3">
                <label for="descr">Description</label>
                <textarea 
                    type="password" 
                    class="form-control bg-secondary" 
                    id="descr"
                    name="descr"></textarea>
            </div>
            <div class="form-group my-3">
                <input 
                    type="file" 
                    class="form-control-file bg-secondary" 
                    id="image"
                    name="image">
                <label for="image">Rasm tanlang</label>
            </div>

            <button type="submit" class="btn btn-primary m-auto">Add Blog Post</button>
        </form>
    </div>
</div>
<script src="{{url}}/js/color.js" ></script>

<script src="{{url}}/js/jquery-3.6.0.min.js"></script>
<script src="{{url}}/js/switcher.js"></script>